const int button = A0;
int x = 0;
const int green = 8;
const int red = 9;
void setup() {
  pinMode(button, INPUT);
  pinMode(red,OUTPUT);
  pinMode(green,OUTPUT);
  Serial.begin(9600);
}

void loop() {
  int buttons = analogRead(button);
  digitalWrite(green, LOW);
  digitalWrite(red, HIGH);
  if(buttons == 1){
    Serial.println("on"+ String(x));
    x += 1;
    digitalWrite(green, HIGH);
    digitalWrite(red, LOW);
    delay(2000);
  };
}
